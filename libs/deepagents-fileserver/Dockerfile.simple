# Simple Dockerfile for DeepAgents FileServer
# This version is optimized for environments with network constraints

FROM python:3.11-slim

WORKDIR /app

# Copy all files
COPY . .

# Install dependencies (this will work offline if packages are already cached)
RUN pip install --no-cache-dir -e . 2>/dev/null || \
    (pip install --no-cache-dir fastapi uvicorn pydantic && \
     pip install --no-cache-dir --no-deps -e .)

# Create data directory
RUN mkdir -p /data

# Expose port
EXPOSE 8080

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    FILESERVER_ROOT_DIR=/data \
    FILESERVER_HOST=0.0.0.0 \
    FILESERVER_PORT=8080 \
    FILESERVER_MODE=fastapi

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8080/health').read()" || exit 1

# Entry point
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

ENTRYPOINT ["docker-entrypoint.sh"]
